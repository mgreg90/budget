<div class="">
  <h2>Hello, <%= current_user.greeting %></h2>
</div>
<div class="">
  <% if current_user.accounts.empty? %>
    <%= link_to "Add an Account", new_account_path %>
  <% end %>
</div>
<div class="">
  <h3>Accounts</h3>
  <ul>
    <% current_user.accounts.each do |account| %>
      <li><%= link_to account.name, account_path(account) %></li>
    <% end %>
  </ul>
</div>